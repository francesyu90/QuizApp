<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroud"
    tools:context="com.example.beijia.quizapp.MainActivity">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="94dp"
        android:text="What is 48 + 12?"
        android:textAlignment="center"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="28sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/optionAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:buttonTint="?attr/colorBackgroundFloating"
        android:text="60"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="24sp" />

    <RadioButton
        android:id="@+id/optionBButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/optionAButton"
        android:layout_alignStart="@+id/optionAButton"
        android:layout_below="@+id/optionAButton"
        android:layout_marginTop="24dp"
        android:buttonTint="?attr/colorBackgroundFloating"
        android:text="70"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="24sp" />

    <RadioButton
        android:id="@+id/optionCButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/optionBButton"
        android:layout_alignStart="@+id/optionBButton"
        android:layout_below="@+id/optionBButton"
        android:layout_marginTop="24dp"
        android:buttonTint="?attr/colorBackgroundFloating"
        android:text="80"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="24sp" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/optionCButton"
        android:layout_marginTop="54dp"
        android:background="#ffffff"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#53bbb4"
        android:textSize="26sp" />

</RelativeLayout>
